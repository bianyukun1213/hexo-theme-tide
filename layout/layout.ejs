<% const tideCtx=get_ctx(site,config,theme,page) %>
<!DOCTYPE html>
<html lang="<%= tideCtx.language %>" dir="<%= tideCtx.dir %>">

<head>
  <%- partial('./partials/res-head-begin.ejs',{tideCtx}) %>
  <%- partial('./partials/meta.ejs',{tideCtx}) %>
  <%- partial('./partials/res-head-end.ejs',{tideCtx}) %>
</head>

<body>
  <%- partial('./partials/res-body-begin.ejs',{tideCtx}) %>
  <textarea id="ctx" style="display:none;" class="un-fixed un-size-96 un-right-0 un-bottom-0 un-z-100"><%= JSON.stringify(tideCtx,null,2) %></textarea>
  <div id="tide-root" class="un-bg-b-scnd un-absolute un-size-full un-text-base un-break-words" <% if(is_post()) { %> tide-is-post="true" <% } %>>
    <div id="tide-side-bar" class="un-sc-trans-default un-bg-prim un-fixed un-flex un-flex-col un-justify-between un-z-30 un-text-center un-text-t-sb un-h-full">
      <header class="un-flex-none un-p-8">
        <% if(is_home()) { %>
        <h1 id="tide-site-title" class="un-my-4 un-font-bold">
          <%= tideCtx.site_title %>
        </h1>
        <% } else { %>
        <p id="tide-site-title" class="un-my-4 un-font-bold">
          <%= tideCtx.site_title %>
        </p>
        <% } %>
        <p id="tide-site-subtitle" class="un-my-2 un-font-italic">
          <%= tideCtx.site_subtitle %>
        </p>
      </header>
      <% if(tideCtx.microformats2){ %>
      <% for(const card of tideCtx.site_h_cards){ %>
      <%- partial('./partials/h-card.ejs',{h_card:card,authorCard:false}) %>
      <% } %>
      <% } %>
      <nav id="tide-navigation" class="un-flex-initial un-self-center un-w-full">
        <ul class="un-inline-flex un-flex-col un-items-start un-p-0 un-m-0 un-w-auto un-list-none">
          <% for(const key in tideCtx.navigation){ %>
          <% if(Object.prototype.hasOwnProperty.call(tideCtx.navigation,key)){ %>
          <% const element=tideCtx.navigation[key] %>
          <li class="un-inline-block un-mb-8">
            <i class="<%= element.icon %> un-me-4" aria-hidden="true"></i><a class="un-sc-link-plain un-text-t-sb!" href="<%= url_for(element.link) %>"><%= key %></a>
          </li>
          <% } %>
          <% } %>
        </ul>
      </nav>
      <footer class="un-flex-none un-p-8">
        <!-- 留一个隐藏的 div，方便用户通过修改注入 -->
        <div id="tide-footer-injection-point" class="un-hidden"></div>
        <% if(!tide_utils().isEmptyObject(tideCtx.icp_record)) { %>
        <p id="tide-icp-record"><a class="un-sc-link-plain un-text-t-sb!" href="<%= tideCtx.icp_record.link %>"><%= tideCtx.icp_record.text %></a></p>
        <% } %>
        <% if(tideCtx.generated_by_hexo){ %>
        <p id="tide-generated-by-hexo"><%- __('navigation.footer.generated_by_hexo') %></p>
        <% } %>
      </footer>
    </div>
    <div id="tide-content" class="un-sc-trans-default un-fixed un-flex un-flex-col un-size-full">
      <!-- 顶部工具栏 -->
      <header id="tide-top-bar" class="un-bg-b-prim un-flex un-justify-stretch un-items-center un-h-16 un-overflow-auto">
        <div class="un-w-1/4 un-min-w-20 un-h-12">
          <button id="tide-btn-nav" class="un-sc-btn-default un-relative un-float-start un-size-12 un-ms-4" title="<%= __('navigation.btn_nav.title') %>">
            <i id="tide-btn-nav-icon-bars" class="fa-solid fa-bars" aria-hidden="true"></i><i id="tide-btn-nav-icon-close" class="fa-solid fa-close" aria-hidden="true"></i>
          </button>
        </div>
        <div class="un-w-3/4 un-min-w-32 un-h-12">
          <!-- 开启 relative，使用 right 让元素具有符合直觉的 tab index -->
          <button id="tide-btn-search" class="un-sc-btn-default un-relative un-float-end un-end-16 un-size-12 un-me-4" title="<%= __('navigation.btn_search.title') %>">
            <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
          </button>
          <button id="tide-btn-settings" class="un-sc-btn-default un-relative un-float-end -un-end-16 un-size-12 un-me-4" title="<%= __('navigation.btn_settings.title') %>">
            <i class="fa-solid fa-gear" aria-hidden="true"></i>
          </button>
        </div>
      </header>
      <main id="tide-main-content" class="un-bg-b-prim un-flex-1 un-overflow-auto">
        <%- body %>
        <%- partial('./partials/floating-utils.ejs',{tideCtx}) %>
      </main>
    </div>
  </div>
  <%- partial('./partials/res-body-end.ejs',{tideCtx}) %>
</body>

</html>